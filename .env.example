# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/greengrid

# Authentication
SECRET_KEY=your-jwt-secret-key-here

# Optional Weather API Keys (fallbacks available)
OPENWEATHER_API_KEY=your-openweather-api-key
TOMORROW_API_KEY=your-tomorrow-io-api-key
WEATHERAPI_KEY=your-weatherapi-key

# Optional Solar Modeling API
NREL_API_KEY=your-nrel-api-key

# Optional Carbon Footprint APIs
CLIMATIQ_API_KEY=your-climatiq-api-key
CARBON_INTERFACE_KEY=your-carbon-interface-api-key

# Optional Notification Service
TELEGRAM_BOT_TOKEN=your-telegram-bot-token

# Application Settings
NODE_ENV=development
PORT=5000

# Optional External Data Sources (India-specific)
# These are placeholders for future integrations
USE_NOAR=false
USE_POSOCO=false
NOAR_API_KEY=your-noar-api-key
POSOCO_API_KEY=your-posoco-api-key

# Optional Map Services
MAPBOX_ACCESS_TOKEN=your-mapbox-token

# Email Configuration (for future notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# Redis Configuration (for future caching)
REDIS_URL=redis://localhost:6379

# Logging Level
LOG_LEVEL=info

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# File Upload Limits
MAX_FILE_SIZE=5000000
UPLOAD_PATH=./uploads

# Session Configuration
SESSION_SECRET=your-session-secret
SESSION_MAX_AGE=86400000

# Analytics & Monitoring
ANALYTICS_ENABLED=true
MONITORING_ENDPOINT=https://your-monitoring-service.com/api/metrics

# Feature Flags
ENABLE_COMMUNITY_FEATURES=true
ENABLE_ADVANCED_ANALYTICS=true
ENABLE_DEVICE_AUTOMATION=true
ENABLE_WEATHER_ALERTS=true
ENABLE_CARBON_TRACKING=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL=daily
BACKUP_RETENTION_DAYS=30

# Development Configuration
DEBUG=false
ENABLE_CORS=true
CORS_ORIGIN=http://localhost:5000

# Production Settings
ENABLE_HTTPS=false
SSL_CERT_PATH=./ssl/cert.pem
SSL_KEY_PATH=./ssl/key.pem

# Third-party Integrations
ENABLE_GOOGLE_ANALYTICS=false
GOOGLE_ANALYTICS_ID=GA-XXXXXXXXX

# Internationalization
DEFAULT_LOCALE=en
SUPPORTED_LOCALES=en,hi,ta,te,bn

# Currency and Units
DEFAULT_CURRENCY=INR
DEFAULT_UNITS=metric
TIMEZONE=Asia/Kolkata

# Performance Optimization
ENABLE_CACHING=true
CACHE_TTL=3600
ENABLE_COMPRESSION=true

# Security Settings
ENABLE_RATE_LIMITING=true
ENABLE_HELMET=true
ENABLE_CSRF_PROTECTION=true
TRUSTED_PROXIES=127.0.0.1

# Database Pool Configuration
DB_POOL_MIN=2
DB_POOL_MAX=10
DB_POOL_IDLE=30000

# Queue Configuration (for background jobs)
REDIS_QUEUE_URL=redis://localhost:6379/1
QUEUE_CONCURRENCY=5

# Notification Preferences
ENABLE_EMAIL_NOTIFICATIONS=true
ENABLE_PUSH_NOTIFICATIONS=false
ENABLE_SMS_NOTIFICATIONS=false

# AI/ML Model Configuration
ML_MODEL_PATH=./models
ENABLE_MODEL_UPDATES=true
MODEL_UPDATE_INTERVAL=weekly

# Data Export Settings
EXPORT_FORMAT=json,csv,pdf
MAX_EXPORT_RECORDS=10000

# Maintenance Mode
MAINTENANCE_MODE=false
MAINTENANCE_MESSAGE="System under maintenance. Please check back later."
